<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>


<body>
    <div class="header">
        <a href="/"><img class="logo" src="/images/icon1.png" alt="Icon1" /></a>
        <div class="nav-wrapper">
            <span class="nav-link"><a href="/">Public Timeline</a></span>
            <span class="nav-link"><a href="/cheep">Cheeps</a></span>
            <span class="nav-link"><a href="/Swagger">Swagger</a></span>
        </div>
        <div>
            <input id="navSearchForm" type="text" placeholder="Search for user">
        </div>

    </div>
    <div class="line"></div>
    <div class=root>
        <div class=body>
            @RenderBody()
        </div>
        <div class=footer>
            Chirp &mdash; An ASP.NET Application
        </div>
    </div>

</body>

@await RenderSectionAsync("Scripts", required: false)

</html>
