@page "/{author}/comments"

@using Chirp.Web.Models

@model Chirp.Web.Pages.User.UserCommentsModel

@await Html.PartialAsync("_CheepsPartial", Model.CommentedCheeps)

@await Html.PartialAsync("_PaginationPartial", new Pagination()
{
    Current = Int32.Parse(Request.Query["page"].ToString()),
    Pages = (int)Math.Ceiling(Model.TotalCommentedCheeps / 32.0)
})
