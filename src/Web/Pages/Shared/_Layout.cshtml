@using Microsoft.AspNetCore.Components.Web

<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/index.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>

<body>
    <div class="header">
        <a style="justify-self: center" href="/"><img class="logo" src="/images/icon1.png" alt="Icon1" /></a>
        <input id="navSearchForm" type="text" placeholder="Search for user">
        <div class="nav-wrapper">
            <span class="nav-link"><a href="/">Public Timeline</a></span>
            <span class="nav-link"><a href="/cheep">Cheeps</a></span>
        </div>
    </div>
    <div class="line"></div>
    <div class=root>
        <div class=container>


            <h2>@ViewData["Title"]</h2>
            <h2>@ViewData["totalCheeps"] Cheeps displayed</h2>
            @RenderBody()
        </div>
        <div class=footer>
            Chirp &mdash; An ASP.NET Application
        </div>
    </div>
</body>
@await RenderSectionAsync("Scripts", required: false)

</html>
